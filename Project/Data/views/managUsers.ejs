<html>
    <body>
        <h1>Movies - Subscriptions Web Site</h1>

        <big><b> Connected User: <%= name %> </b></big><br><br>

        <button> <a href="/login/movies">Movies</a></button>
        <button> <a href="/login/subscriptions">Subscriptions</a></button>
        <button> <a href="/login/managUsers">Users Management</a></button>
        <button> <a href="/login">Logout</a></button> <br><br>
<!----------------------------------------------------------------------------------------------------->
        <h2>All Users Page</h2>

        <button> <a href="/login/managUsers">All Users</a></button>
        <button> <a href="/login/managUsers/addUser">Add User</a></button><br><br>

        <!-- lopp that get all users -->
        <% for(var i=0; i < users.length; i++) {%>
            <table border="2">         
            <td>
                <% if(users[i].user=="admin") {%> <!-- if user admin -->
                    
                    <b>Name: </b> <%=users[i].name%> <br>
                    <b>User Name: </b> <%=users[i].user%><br>
                    <b>Created Date: </b> <%=users[i].date%> <br>
                    <b>Permissions: </b> <%=users[i].perm%> <br><br>
                
                <% } %>

                <% if(users[i].user!="admin") {%>  <!-- if user not admin -->
                
                    <b>Name: </b> <%=users[i].name%> <br>
                    <b>User Name: </b> <%=users[i].user%><br>
                    <b>Session Timeout (Minutes): </b> <%=users[i].session%> <br>
                    <b>Created Date: </b> <%=users[i].date%> <br>
                    <b>Permissions: </b> <%=users[i].perm%> <br><br>

                    <button> <a href="/login/managUsers/users/edit/<%=users[i].id%>">Edit</a></button>
                    <button> <a href="/login/managUsers/users/delete/<%=users[i].id%>">Delete</a></button>

                <% } %>
            </td> 
            </table>

            <br><br>
        <% } %>
    </body>
</html>